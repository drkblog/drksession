{
  "name": "drksession",
  "version": "1.1.9",
  "description": "Lightweight session manager for Cloudflare workers",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --write  \"*.{json,js}\" \"src/**/*.{js,ts}\" \"test/**/*.{js,ts}\"",
    "lint": "eslint --max-warnings=0 src test",
    "prettier": "prettier --check \"*.{json,js}\" \"src/**/*.{js,ts}\" \"test/**/*.{js,ts}\"",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "cf-typegen": "wrangler types"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "session-management",
    "cloudflare-workers"
  ],
  "author": "Leandro Hernan Fernandez <drkbugs@gmail.com> (https://drkbugs.com)",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/drkblog/drksession"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ]
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.4.13",
    "@cloudflare/workers-types": "^4.20240620.0",
    "@eslint/js": "^9.7.0",
    "@vitest/coverage-istanbul": "^1.5.3",
    "eslint": "^8.57.0",
    "globals": "^15.8.0",
    "prettier": "3.3.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.16.1",
    "vitest": "1.5.3",
    "wrangler": "^3.63.2"
  }
}
