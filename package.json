{
  "name": "drksession",
  "version": "1.0.11",
  "description": "Lightweight session manager for Cloudflare workers",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build" : "tsc",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm run test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint": "eslint --max-warnings=0 src",
    "prettier": "prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "test": "cross-env DISABLE_MOCKED_WARNING=true jest --config jest.config.js --verbose"
  },
  "files": ["lib/**/*"],
  "keywords": ["session-management", "cloudflare-workers"],
  "author": "Leandro Hernan Fernandez <drkbugs@gmail.com> (https://drkbugs.com)",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/drkblog/drksession"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "async-map-like": "^0.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "jest": "^27.4.5",
    "prettier": "^2.3.0",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.2",
    "typescript": "^4.5.4",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "worktop": "^0.7.1"
  }
}
